generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id @default(cuid())
  name         String         @unique
  lastname     String
  email        String         @unique
  password     String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  Notification Notification[] @relation(name: "UserNotifications")
  Movies       Movies[]       @relation("UserMovies")
}

model Notification {
  id          String   @id @default(cuid())
  title       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  description String
  readed      Boolean
  userId      String
  user        User     @relation(name: "UserNotifications", fields: [userId], references: [id])
}

model Movies {
  id        String   @id @default(cuid())
  title     String
  user      User[]   @relation("UserMovies")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
